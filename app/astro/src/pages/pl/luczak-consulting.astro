---
import BaseLayout from '@layouts/BaseLayout.astro';
import companyData from '@content/company.pl.json';

const title = 'Luczak Consulting — Architektura rozwiązań IT';
const description = companyData.valueProp;
---

<BaseLayout
  title={title}
  description={description}
  lang="pl"
  currentPath="/pl/luczak-consulting"
>
  <div class="container">
    <div class="card">
      <h1>{companyData.name}</h1>
      <p>{companyData.valueProp}</p>

      <h2>Obszary</h2>
      <ul>
        {companyData.services.map((service) => <li>{service}</li>)}
      </ul>

      <h2>Dla kogo</h2>
      <ul>
        {companyData.targetAudience.map((audience) => <li>{audience}</li>)}
      </ul>

      <h2>Rejestr</h2>
      <p><strong>KRS:</strong> {companyData.registry.krs}</p>
      <p><strong>NIP:</strong> {companyData.registry.nip}</p>
      <p><strong>REGON:</strong> {companyData.registry.regon}</p>
      <p><strong>Adres:</strong> {companyData.registry.address}</p>

      <div>
        <a href={`${import.meta.env.BASE_URL}/pl/o-mnie`} class="btn">Powrót do O mnie</a>
        <a href={`${import.meta.env.BASE_URL}/pl/kontakt`} class="btn">Kontakt</a>
      </div>
    </div>
  </div>
</BaseLayout>
